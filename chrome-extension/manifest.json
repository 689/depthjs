{
  "name": "DepthJS",
  "version": "0.1",
  "description": "Connecting depth-aware cameras to Javascript",

  "icons": {
    "128": "logo_128x128.png"
  },

  "browser_action": {
    "default_icon": "logo_128x128.png",
    "popup": "popup.html"
  },

  "content_scripts": [
    { "matches": ["http://*/*"],
      "css": ["vfx/zflow/zflow.css","selectorBox.css"],
      "js": ["jquery-1.4.4.min.js",
             "underscore-min.js",
             "vfx/zflow/zflow.js",
             "content_script.js"],
      "run_at": "document_end" }
  ],

  "background_page": "background.html",

  "permissions": [
    "tabs",
    "bookmarks",
    "http://*/*"
  ]
}
